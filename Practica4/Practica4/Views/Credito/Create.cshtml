@using Practica4.Models
@model Credit
@{
    ViewBag.Title = "Create";
    string codigo = ViewBag.codigo;
    string nombre = ViewBag.nombre;
    string cuenta = ViewBag.cuenta;
}
<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-9 text-right">
                        <div>Cuenta</div>
                        <div>@cuenta</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-9 text-right">
                        <div>Nombre</div>
                        <div>@nombre</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-9 text-right">
                        <div>Código</div>
                        <div>@codigo</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h2>Solicitar Nuevo Credito</h2>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <fieldset>
                        <div class="form-group">
                            <h4>Monto:  @Html.EditorFor(model => model.monto, new { htmlAttributes = new { @class = "form-control" } })</h4>
                        </div>
                        <div class="form-group">
                            <h4>Descripcion para solicitar Credito : @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })</h4>
                        </div>
                        <div class="form-group">
                            <h4>Cuenta propia: @Html.EditorFor(model => model.cuenta, new { htmlAttributes = new { @class = "form-control", @Value = cuenta, @readonly = "readonly" } })</h4>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-10">
                                <input type="submit" value="Solicitar" class="btn btn-lg btn-success btn-block" />
                            </div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-md-offset-1 col-md-10">
                                <a href="@Url.Action("Index", "Usuario")" class="btn btn-lg btn-info btn-block">Regresar</a>
                            </div>
                        </div>
                        <hr />
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
